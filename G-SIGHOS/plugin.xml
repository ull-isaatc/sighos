      <command
            categoryId="g_sighos.commands.category"
            helpContextId="esto es un comandos 3"
            id="g_sighos.commands.sampleCommand3"
            name="Sample Command">
      </command>
      <command
            categoryId="g_sighos.commands.category"
            helpContextId="esto es un comandos 4"
            id="g_sighos.commands.sampleCommand4"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="g_sighos.commands.sampleCommand1"
            class="g_sighos.menus.simplemodelo1">
      </handler>
      <handler
            class="g_sighos.menus.simplemodelo2"
            commandId="g_sighos.commands.sampleCommand2">
      </handler>
      <handler
            class="g_sighos.menus.simplemodelo3"
            commandId="g_sighos.commands.sampleCommand3">
      </handler>
      <handler
            class="g_sighos.menus.simplemodelo4"
            commandId="g_sighos.commands.sampleCommand4">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="g_sighos.commands.sampleCommand1"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+1"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="g_sighos.commands.sampleCommand2"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+2">
      </key>
      <key
            commandId="g_sighos.commands.sampleCommand3"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
      <key
            commandId="g_sighos.commands.sampleCommand4"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+4">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Elementos"
               mnemonic="M"
               id="g_sighos.menus.sampleMenu">
            <command
                  commandId="g_sighos.commands.sampleCommand1"
                  icon="icons/1.gif"
                  id="g_sighos.menus.sampleCommand1"
                  label="elemento 1"
                  mnemonic="S">
            </command>
            <command
                  commandId="g_sighos.commands.sampleCommand2"
                  icon="icons/2.gif"
                  id="g_sighos.menus.sampleCommand1"
                  label="elemento 2"
                  style="push">
            </command>
         </menu>
         <menu
               id="menu2"
               label="Estado">
            <command
                  commandId="g_sighos.commands.sampleCommand3"
                  icon="icons/3.gif"
                  id="g_sighos.menus.sampleCommand3"
                  label="estado 1"
                  style="push">
            </command>
            <command
                  commandId="g_sighos.commands.sampleCommand4"
                  icon="icons/4.gif"
                  id="g_sighos.menus.sampleCommand4"
                  label="estado 2"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="g_sighos.toolbars.sampleToolbar">
            <command
                  commandId="g_sighos.commands.sampleCommand1"
                  helpContextId="Nos dice hola"
                  icon="icons/1.gif"
                  id="g_sighos.toolbars.sampleCommand1"
                  tooltip="Say hello world">
